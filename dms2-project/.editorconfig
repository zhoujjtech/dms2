# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java source files
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# XML files
[*.xml]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Maven files
[pom.xml]
indent_style = space
indent_size = 2
continuation_indent_size = 2
